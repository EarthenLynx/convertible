<div class="container">
  <div class="row">
    <div class="col"></div>
    <div class="col-sm-12 col-lg-6">
      <div class="card mt-3">
        <div class="card-header">
          <h4 class="card-title">Fileupload</h4>
          <div class="card-subtitle">Drop a file in the area below</div>
        </div>
        <div id="dropzone" class="card-body" ondrop="dropHandler(event);" ondragover="dragOverHandler(event);" ondragleave="dragLeaveHandler(event)">
          <h2><i class="fas fa-file-upload"></i></h2>
          <h2>Upload</h2>
        </div>
        <div class="card-footer">
          <div class="row">
            <div class="col-sm-12 col-lg-9">
              <p id="file-name">Nothing to see here yet</p>
            </div>
            <div id="upload-button-wrapper" class="col-sm-12 col-lg-3"></div>
          </div>
        </div>
      </div>
    </div>
    <div class="col"></div>
  </div>
  <div class="row mt-3">
    <div class="col"></div>
    {{!-- First input part: Conversion --}}
    <div class="col-sm-12 col-lg-3">

      {{!-- Select input --}}
      <div class="input-group input-group-sm mb-3">
        <label class="input-group-text" for="inputGroupSelect01">Format</label>
        <select name="convertTo" class="form-select" id="input-convert-to">
          <option value="undefined" disabled selected>Choose a target format ...</option>
          <option value="jpg">JPG</option>
          <option value="png">PNG</option>
          <option value="webp">WebP</option>
          <option value="pdf">PDF</option>
        </select>
      </div>


      {{!-- Quality input --}}
      <div class="input-group input-group-sm mb-3">
        <span class="input-group-text">Quality</span>
        <input type="number" min="10" max="100" value="100" placeholder="Image Quality" class="form-control" name="qualityTo" id="input-quality-to">
      </div>

      {{!-- Height input --}}
      <div class="input-group input-group-sm mb-3">
        <span class="input-group-text">Height</span>
        <input type="number" min="100" max="5000" placeholder="Choose a target height ..." class="form-control" name="heightTo" id="input-height-to">
      </div>

      {{!-- Width input --}}
      <div class="input-group input-group-sm mb-3">
        <span class="input-group-text">Width</span>
        <input type="number" min="100" max="5000" placeholder="Choose a target width ..." class="form-control" name="widthTo" id="input-width-to">
      </div>
    </div>

    {{!-- Second input part: Sizing --}}
    <div class="col-sm-12 col-lg-3">

      {{!-- Fixed aspect ratio input --}}
      <div class="input-group input-group-sm mb-3">
        <label class="input-group-text">Fixed ratio</label>
        <select name="aspectRatio" class="form-select" id="input-fixed-aspect">
          <option value="undefined" disabled selected>Manual
          <option>
          <option value="hd">Landscape 16:9 format</option>
          <option value="classic">Classic 4:3 format</option>
          <option value="square">Square 1:1 format</option>
        </select>
      </div>

      {{!-- Keep aspect ratio input --}}
      <div class="form-check form-switch">
        <input class="form-check-input" type="checkbox" id="input-keep-aspect">
        <label class="form-check-label" for="flexSwitchCheckDefault">Keep aspect ratio</label>
      </div>

      {{!-- Keep aspect ratio input --}}
      <div class="form-check form-switch">
        <input class="form-check-input" type="checkbox" id="input-image-fit">
        <label class="form-check-label" for="flexSwitchCheckDefault">Fit background & image size</label>
      </div>
    </div>
    <div class="col"></div>
  </div>
  <div id="gallery" class="row mt-3 mx-2">
  </div>
</div>